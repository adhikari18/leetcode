/*
Given an array of size n, find the majority element. The majority element is the element that appears more than ⌊ n/2 ⌋ times.

You may assume that the array is non-empty and the majority element always exist in the array.

Example 1:

Input: [3,2,3]
Output: 3
Example 2:

Input: [2,2,1,1,1,2,2]
Output: 2
*/
/*
Runtime: 136 ms, faster than 16.13% of C# online submissions for Majority Element.
Memory Usage: 31.1 MB, less than 50.00% of C# online submissions for Majority Element.
*/
public class Solution
    {
        public int MajorityElement(int[] nums)
        {
            var sortedNums = nums.OrderBy(n => n).ToArray();
            return sortedNums[nums.Length / 2];
        }
    }
